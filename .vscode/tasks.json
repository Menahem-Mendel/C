{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "debug c",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-Wall",
				"-g",
				"-o",
				"dbg.exe",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "debug cpp",
			"type": "shell",
			"command": "g++",
			"args": [
				"-Wall",
				"-g",
				"-o",
				"dbg.exe",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "build objects cpp",
			"type": "shell",
			"command": "g++",
			"args": [
				"-c",
				"-g",
				"${fileDirname}/*.cpp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "link objects cpp",
			"type": "shell",
			"command": "g++",
			"args": [
				"-o",
				"release.exe",
				"${workspaceFolder}/*.o",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}